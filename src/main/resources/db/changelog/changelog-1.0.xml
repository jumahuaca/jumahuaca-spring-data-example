<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

	<changeSet author="mforlenza" id="changelog-1.0-0">
		<preConditions onFail="MARK_RAN">
			<dbms type="postgresql" />
			<not>
				<tableExists tableName="uva_exchange" />
			</not>
		</preConditions>
		<sqlFile path="db/changelog/changelog-1.0-0.sql" />
	</changeSet>
	
	<changeSet author="mforlenza" id="changelog-1.0-1" failOnError="false">
		<preConditions onFail="MARK_RAN">
			<dbms type="postgresql" />
				<sqlCheck expectedResult="0">select count(*) from uva_loan</sqlCheck>
		</preConditions>
		<sqlFile path="db/changelog/changelog-1.0-1.sql" />
	</changeSet>
	
	<changeSet author="mforlenza" id="changelog-1.0-2">
		<preConditions onFail="MARK_RAN">
			<dbms type="postgresql" />
			<not>
				<tableExists tableName="BATCH_JOB_INSTANCE" />			
			</not>			
		</preConditions>
		<sqlFile path="db/changelog/spring-batch-model.sql" />
	</changeSet>

</databaseChangeLog>